@page "/Updater/Manage"
@inherits SvxlinkManager.Pages.Updater.ManageBase

@if (UpdaterService.Releases is null)
{
  <div class="alert alert-primary" role="alert">
    Recherche de mise à jour.
  </div>
}
else
{
  if (UpdaterService.IsUpToDate())
  {
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-success" role="alert">
          <h2>Svxlink Manager est à jour.</h2>
          <h3>Version actuelle @UpdaterService.CurrentVersion</h3>
        </div>
      </div>
    </div>
  }
  else
  {
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-warning" role="alert">
          <h2>Une nouvelle version est disponible.</h2>
          <div class="row">
            <div class="col-md-6"><h3>Version actuelle @UpdaterService.CurrentVersion</h3></div>
            <div class="col-md-6"><h3>Dernière version @UpdaterService.LastRelease.TagName</h3></div>
          </div>
        </div>
      </div>
    </div>
  }

}