@using SvxlinkManager.Domain.Entities

@page "/Echolink/Manage"
@inherits SvxlinkManager.Pages.Channels.ManageBase<EcholinkChannel, Manage>

<div class="row">
  <div class="col-xl-2"><h3>@Loc["Echolink"]</h3></div>
  <div class="col-xl-3 offset-xl-7">
    <a class="btn btn-outline-success" href="Echolink/Create" role="button">@Loc["CreateEcholinkRoom"]</a>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="alert alert-primary" role="alert">
      @AlertHeader
    </div>
  </div>
</div>

<ul id="channel-manage-list" class="list-group-horizontal">
  @foreach (var channel in Channels)
  {
    <li class="list-group-item">
      <div class="row">
        <div class="col-xl-3 text-nowrap">
          @if (channel.IsDefault)
          {<span class="oi oi-home" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="@string.Format(Loc["DefaultTooltip"], channel.Name)"></span>}
          @if (channel.IsTemporized)
          {<span class="oi oi-clock" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="@string.Format(Loc["TemporizedTooltip"], channel.Name)"></span>}
          &nbsp;@channel.Name
        </div>
        <div class="col-xl-2 text-nowrap">@channel.CallSign</div>
        <div class="col-xl-5 text-truncate">@channel.Host</div>
        <div class="col-xl-2">
          <a class="btn btn-outline-primary" href="Echolink/Edit/@channel.Id" role="button">@Loc["BtnEdit"]</a> &nbsp; @if (!channel.IsDefault)
          {<button type="button" class="btn btn-danger" @onclick="@(() => DeleteAsync(channel))">@Loc["BtnDelete"]</button>}
        </div>
      </div>
    </li>
  }
</ul>

@code {

  public MarkupString AlertHeader => new MarkupString(Loc["AlertHeader"]);

}