@using Microsoft.AspNetCore.Html

@page "/Reflector/Manage"
@inherits SvxlinkManager.Pages.Reflector.ManageBase

<div class="row">
  <div class="col-xl-2"><h3>@Loc["Title"]</h3></div>
  <div class="col-xl-2 offset-xl-8">
    <a class="btn btn-outline-success" href="Reflector/Create" role="button">@Loc["BtnCreate"]</a>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="alert alert-primary" role="alert">
      @AlertHeader
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="alert alert-danger" role="alert">
      <p>@Loc["DangerSamePort"]</p>
    </div>
  </div>
</div>

<ul id="channel-manage-list" class="list-group-horizontal">
  @foreach (var rp in Reflectors)
  {
    <li class="list-group-item">
      <div class="row">
        <div class="col-xl-3 text-nowrap">
          @rp.Name
          @if (rp.Enable)
          {
            <div class="blink d-inline-block" style="margin-left:10px;">
              <span class="badge badge-danger">@Loc["OnAir"]</span>
            </div>
          }
        </div>
        <div class="col-xl-6 text-nowrap">
          Port: @IniService.FindConfigValueInString(rp.Config, "GLOBAL.LISTEN_PORT")
        </div>
        <div class="col-xl-3">

          @if (!rp.Enable)
          {
            <button type="button" class="btn btn-outline-success" @onclick="@(() => StartAsync(rp.Id))">@Loc["BtnRun"]</button>
          }
          else
          {
            <button type="button" class="btn btn-outline-success" @onclick="@(() => StopAsync(rp.Id))">@Loc["BtnStop"]</button>
          }
          &nbsp;<a class="btn btn-outline-primary" href="Reflector/Edit/@rp.Id" role="button">@Loc["BtnEdit"]</a>&nbsp;
          @if (!rp.Enable)
          {
            <button type="button" class="btn btn-danger" @onclick="@(() => DeleteAsync(rp.Id))">@Loc["BtnDelete"]</button>
          }
        </div>
      </div>
    </li>
  }
</ul>

@code{

  public MarkupString AlertHeader => new MarkupString(Loc["AlertHeader"]);

}