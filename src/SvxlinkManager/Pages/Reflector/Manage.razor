@page "/Reflector/Manage"
@inherits SvxlinkManager.Pages.Reflector.ManageBase

<div class="row">
  <div class="col-xl-2"><h3>Profils Radio</h3></div>
  <div class="col-xl-2 offset-xl-8">
    <a class="btn btn-outline-success" href="RadioProfile/Create" role="button">Créer un nouveau profil radio</a>
  </div>
</div>

<ul id="channel-manage-list" class="list-group-horizontal">
  @foreach (var rp in Reflectors)
  {
    <li class="list-group-item">
      <div class="row">
        <div class="col-xl-9 text-nowrap">
          @if (rp.Enable)
          {<span class="oi oi-home" aria-hidden="true"></span>}
          &nbsp;@rp.Name
        </div>
        <div class="col-xl-3 offset-md-1">
          <button type="button" class="btn btn-outline-success" @onclick="@(() => Start(rp.Id))">Appliquer</button> <a class="btn btn-outline-primary" href="Reflector/Edit/@rp.Id" role="button">Editer</a> &nbsp; @if (!rp.Enable)
          {
            <button type="button" class="btn btn-danger" @onclick="@(() => DeleteAsync(rp.Id))">Supprimer</button>}
        </div>
      </div>
    </li>
  }
</ul>